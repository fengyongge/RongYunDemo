<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/meaaage_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:civ_border_width="2dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
           />

        <TextView
            android:id="@+id/message_name_text"
            android:layout_toRightOf="@id/meaaage_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="小萝莉"/>
        <TextView
            android:layout_below="@id/message_name_text"
            android:layout_toRightOf="@id/meaaage_photo"
            android:id="@+id/message_context_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="今晚有时间吗"/>



        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:id="@+id/message_time_text"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>
    </RelativeLayout>


</LinearLayout>